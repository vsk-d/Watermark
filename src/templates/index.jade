<!DOCTYPE html>
html(lang="ru-Ru")

	include includes/head.jade

	body
		.wrapper
			main.main-content
				.result
					h1.result__title Генератор водяных знаков
					.result__window
						.result__wrap
							.result__wrap-water
				.setting-block
					h2.setting-block__title Настройки
					form(action="" encode="multipart/form-data").settings
						
						.settings__wrapper
							.settings__upload
								label.settings__title Исходное изображение
									label(for="upload-img" ).upload__wrapper Image.jpg
										input.fileupload(type = 'file' id = 'upload-img' name = 'files[]' size = '30' data-form-data='{"type": "main-image"}').upload__input.upload__input_image.hide
										input(type='hidden' name='fileurl')
								label.settings__title  Водяной знак
									label(for="upload-water").upload__wrapper Image.png
										input.fileupload(type = 'file' id = 'upload-water' name = 'files[]' size = '30' data-form-data='{"type": "water-image"}').upload__input.upload__input_water-image.hide
										input(type='hidden' name='fileurl')
						
						.settings__wrapper
							
							.settings__position.tabs
								.settings__title Положение
								ul.tabs__control
									li.tabs-control__item.active
										a(href = '#').tabs-control__link.tabs-control__link_single
											span.hide Одиночный
									li.tabs-control__item
										a(href = '#').tabs-control__link.tabs-control__link_tile
											span.hide Замостить

								ul.tabs__list
									li.tabs__item.active

										.settings__field
									
											.field__row
												input(type = 'radio' name = 'field__part' id = 'left-up').hide
												label(for = 'left-up').field__cell
												input(type = 'radio' name = 'field__part' id = 'middle-up').hide
												label(for = 'middle-up').field__cell
												input(type = 'radio' name = 'field__part' id = 'right-up').hide
												label(for = 'right-up').field__cell
											.field__row
												input(type = 'radio' name = 'field__part' id = 'middle-left').hide
												label(for = 'middle-left').field__cell
												input(type = 'radio' name = 'field__part' id = 'middle-middle').hide
												label(for = 'middle-middle').field__cell
												input(type = 'radio' name = 'field__part' id = 'middle-right').hide
												label(for = 'middle-right').field__cell
											.field__row
												input(type = 'radio' name = 'field__part' id = 'down-left').hide
												label(for = 'down-left').field__cell
												input(type = 'radio' name = 'field__part' id = 'down-middle').hide
												label(for = 'down-middle').field__cell
												input(type = 'radio' name = 'field__part' id = 'down-right').hide
												label(for = 'down-right').field__cell

										.settings__axis
											.axis__wrapper
												.axis__name X
												input(type = 'text' value = '0' data-validation = 'axis-x').axis__input
												.axis__control
													button(name = 'axis__button_up-x').axis__button.axis__button_up
													button(name = 'axis__button_down-x').axis__button.axis__button_down

											.axis__wrapper
												.axis__name Y
												input(type = 'text' value = '0' data-validation = 'axis-y').axis__input
												.axis__control
													button(name = 'axis__button_up-y').axis__button.axis__button_up
													button(name = 'axis__button_down-y').axis__button.axis__button_down

									li.tabs__item.tabs__item_tile

										.settings__field
											.indicator_width
											.indicator_height

										.settings__axis
											.axis__wrapper
												.axis__name.axis__name_height
												input(type = 'text' value = '0' data-validation = 'axis-x').axis__input
												.axis__control
													button(name = 'axis__button_up-x').axis__button.axis__button_up
													button(name = 'axis__button_down-x').axis__button.axis__button_down

											.axis__wrapper
												.axis__name.axis__name_width
												input(type = 'text' value = '0' data-validation = 'axis-y').axis__input
												.axis__control
													button(name = 'axis__button_up-y').axis__button.axis__button_up
													button(name = 'axis__button_down-y').axis__button.axis__button_down

						.settings__wrapper
							.settings__opacity
								.settings__title Прозрачность

								input(type = 'range' data-validation = 'slider').settings__slider
						
						.btn-wrap
							input(type = "reset" value = "Сброс").settings__btn.settings__btn_reset 
							input(type = "submit" value = "Скачать").settings__btn.settings__btn_download 
						
			aside
				ul.language
					li.language__item 
						a(href = '#').language__link РУС
					li.language__item 
						a(href = '#').language__link ENG

				a(href="").socials__link.socials__link_lk

				ul.socials
					li.socials__item
						a(href = '#').socials__link.socials__link_fb
							span.hide facebook
					li.socials__item
						a(href = '#').socials__link.socials__link_tw
							span.hide twitter
					li.socials__item
						a(href = '#').socials__link.socials__link_vk
							span.hide вконтакте
		include includes/footer.jade
